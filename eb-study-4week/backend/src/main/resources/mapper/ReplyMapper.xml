<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.backend.mapper.ReplyMapper">

    <resultMap id="ReplyDTOMap" type="com.study.backend.model.ReplyDTO">
        <id property="replyNum" column="reply_num"/>
        <result property="boardNum" column="board_num"/>
        <result property="content" column="content"/>
        <result property="replyDate" column="reply_date"/>
    </resultMap>

    <!--    reply list-->
    <select id="getReplyList" parameterType="int" resultType="com.study.backend.model.ReplyDTO" resultMap="ReplyDTOMap">
        SELECT *
        FROM tb_reply
        WHERE board_num = #{boardNum}
        ORDER BY reply_date DESC
    </select>

    <!--    reply 작성-->
    <insert id="updateReply" parameterType="com.study.backend.model.ReplyDTO">
        INSERT INTO tb_reply
            (board_num, content)
        VALUES (#{boardNum}, #{content})
    </insert>

    <!--    reply 삭제-->
    <delete id="deleteReply" parameterType="int">
        DELETE
        FROM tb_reply
        WHERE board_num = #{boardNum}
    </delete>
</mapper>
